{
	"name": "simple blocker",
	"version": "1.0",
	"description": "a rudimentary website blocker",
	"permissions": [
		"declarativeContent",
		"storage",
		"tabs"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"manifest_version": 2,
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/get_started16.png",
			"32": "images/get_started32.png",
			"48": "images/get_started48.png",
			"128": "images/get_started128.png"
		}
	},
	"icons": {
		"16": "images/get_started16.png",
		"32": "images/get_started32.png",
		"48": "images/get_started48.png",
		"128": "images/get_started128.png"
	},
	"options_page": "options.html"
}
