{
	"name": "simple blocker",
	"version": "1.0",
	"description": "a rudimentary website blocker",
	"permissions": [
		"declarativeContent",
		"storage",
		"tabs"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"manifest_version": 2,
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"48": "images/dog.png"
		}
	},
	"icons": {
		"48": "images/dog.png"
	},
	"options_page": "options.html"
}
