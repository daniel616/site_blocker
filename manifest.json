{
	"name": "flexible blocker",
	"version": "1.0",
	"description": "a very flexible website blocker",
	"permissions": [
		"declarativeContent",
		"storage",
		"tabs",
		"activeTab"
	],
	"background": {

		"scripts": ["background.js"],
		"persistent": false
	},
	"manifest_version": 2,
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"48": "images/dog.png"
		}
	},
	"icons": {
		"48": "images/dog.png"
	},
	"options_page": "options.html"
}
